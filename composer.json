{
    "name": "aedon/discord-bot",
    "description": "A PHP bot implementation for Discord.",
    "license": "MIT",
    "require": {
        "php": "^7.3.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "psr/log": "^1.1.2",
        "ratchet/pawl":"^0.3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "phpstan/phpstan": "^0.12",
        "mikey179/vfsstream": "^1.6.8"
    },
    "autoload": {
        "psr-4": {
            "Aedon\\DiscordBot\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aedon\\DiscordBot\\Test\\": "tests"
        }
    },
    "scripts": {
        "analyse": "phpstan analyse -c phpstan.neon",
        "test": "phpdbg -qrr ./vendor/bin/phpunit --testdox"
    }
}